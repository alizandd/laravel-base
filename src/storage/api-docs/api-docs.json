{
    "openapi": "3.0.0",
    "info": {
        "title": "HAMSAM",
        "description": "\n * \t  1) call login method and get access_token add token_type in this format : {token_type}+{access_token}\n * \t  2) use them as authorization keys",
        "contact": {
            "name": "alizand",
            "email": "alizandd@gmail.com"
        },
        "version": "1"
    },
    "servers": [
        {
            "url": "{Schema}://{Host}/{Version}",
            "description": "DEVELOP",
            "variables": {
                "Schema": {
                    "enum": [
                        "https",
                        "http"
                    ],
                    "default": "http"
                },
                "Version": {
                    "enum": [
                        "v1",
                        "v2"
                    ],
                    "default": "v1"
                },
                "Host": {
                    "enum": [
                        "localhost/backend/src/public/api",
                        "ssn.tvapps.ir/api",
                        "127.0.0.1:8000/api"
                    ],
                    "default": "localhost/backend/src/public/api"
                }
            }
        }
    ],
    "paths": {
        "/generate-otp": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Generate OTP",
                "description": "Generates an OTP and sends it to the user's mobile number",
                "operationId": "generateOtp",
                "requestBody": {
                    "description": "Mobile number of the user",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "mobile"
                                ],
                                "properties": {
                                    "mobile": {
                                        "type": "string",
                                        "format": "mobile",
                                        "example": "09354541589"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "data": {
                                            "properties": {
                                                "key": {
                                                    "type": "string",
                                                    "example": "4CAaZCJ3IZ1sWgai1pdzsBFMOyXFLVyU"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid mobile number provided"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register user",
                "description": "Registers a new user and returns an access token along with token type and expiry.",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "Payload for registering a new user",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "code",
                                    "key",
                                    "mobile",
                                    "mac",
                                    "device_type"
                                ],
                                "properties": {
                                    "code": {
                                        "type": "integer",
                                        "example": 841679
                                    },
                                    "key": {
                                        "type": "string",
                                        "example": "4CAaZCJ3IZ1sWgai1pdzsBFMOyXFLVyU"
                                    },
                                    "mobile": {
                                        "type": "string",
                                        "example": "09354541589"
                                    },
                                    "mac": {
                                        "type": "string",
                                        "example": "00:1B:44:11:3A:B7"
                                    },
                                    "device_type": {
                                        "type": "string",
                                        "example": "Tizen"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful registration",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "data": {
                                            "properties": {
                                                "access_token": {
                                                    "type": "string",
                                                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiJ9..."
                                                },
                                                "token_type": {
                                                    "type": "string",
                                                    "example": "Bearer"
                                                },
                                                "expires_at": {
                                                    "type": "string",
                                                    "example": "2025-03-03 13:45:44"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden - Invalid or expired code",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "کد وارد شده نامعتبر یا منقضی شده است ."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-scoped-token": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Generate Scoped Access Token For Web",
                "operationId": "generateScopedToken",
                "requestBody": {
                    "description": "Payload for generating a scoped access token",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "scope",
                                    "device_type"
                                ],
                                "properties": {
                                    "scope": {
                                        "description": "Scope of the access token",
                                        "type": "string",
                                        "example": "Web"
                                    },
                                    "device_type": {
                                        "description": "Type of the device requesting the token",
                                        "type": "string",
                                        "example": "Tizen"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Scoped access token generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "data": {
                                            "properties": {
                                                "access_token": {
                                                    "type": "string",
                                                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiJ9..."
                                                },
                                                "token_type": {
                                                    "type": "string",
                                                    "example": "Bearer"
                                                },
                                                "expires_at": {
                                                    "type": "string",
                                                    "example": "2025-03-03 13:45:44"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Forbidden - Invalid or expired input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated ."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ]
            }
        },
